{
  "name": "one-shotter",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test && pnpm test:scripts",
    "test:scripts": "node --test scripts/tests/*.test.mjs",
    "format": "prettier --write .",
    "hello": "node scripts/setup.mjs",
    "predev": "node scripts/check-setup.mjs && pnpm --filter @repo/db db:migrate",
    "prestudio": "node scripts/check-setup.mjs && pnpm --filter @repo/db db:migrate",
    "studio": "turbo run studio",
    "go": "turbo run dev studio",
    "stop": "node scripts/stop-dev-processes.mjs",
    "prego": "node scripts/check-setup.mjs && pnpm --filter @repo/db db:migrate",
    "new-video": "node scripts/new-video.mjs",
    "sandbox": "node scripts/sandbox-auth.mjs"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "turbo": "^2"
  }
}
